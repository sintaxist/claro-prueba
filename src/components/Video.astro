---
interface Props {
    src: string;
}

const { src } = Astro.props;
---

<div class="responsive-iframe-container">
    <iframe
        class="responsive-iframe"
        width="560"
        height="315"
        src="https://www.youtube.com/embed/u31qwQUeGuM?si=rzUwbK-D4JPCgUWF"
        title="Video"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        allowfullscreen></iframe>
</div>
<style>
    .responsive-iframe-container {
        position: relative;
        width: 100%;
        padding-top: 56.25%; /* Proporci√≥n de aspecto 16:9 para videos (9 / 16 * 100) */
    }

    .responsive-iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
</style>
