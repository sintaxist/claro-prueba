---
interface Props {
	src: string;
}

const { src } = Astro.props;
---

<div class="video-container">
    <video controls width="600" height="400">
        <source src={src} type="video/mp4" />
        Tu navegador no soporta el elemento de video.
    </video>
</div>
<style>
    .video-container {
        position: relative;
        width: 100%;
        overflow: hidden;
        padding-top: 56.25%;
    }
    .video-container video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
    .video-container video::controls {
        background-color: rgba(0, 0, 0, 0.7);
        color: var(--ligh);
        border-radius: 8px;
        padding: 8px;
    }
    .video-container video::-webkit-media-controls-timeline-progress-bar {
        background-color: var(--accent);
    }
    .video-container video::-webkit-media-controls-play-button,
    .video-container video::-webkit-media-controls-pause-button {
        color: var(--ligh);
        font-size: 24px;
    }
    .video-container video::-webkit-media-controls-current-time-display,
    .video-container video::-webkit-media-controls-time-remaining-display {
        color: var(--ligh);
        font-size: 14px;
    }
    .video-container video::-webkit-media-controls-volume-slider {
        background-color: var(--accent);
    }
    .video-container video::-webkit-media-controls-fullscreen-button {
        color: var(--ligh);
    }
</style>
