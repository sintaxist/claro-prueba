---
interface Props {
	video: any;
}

const { video } = Astro.props;
---

<li class="video-list">
    <article>
        <img
            src={"imgs/placeholder/" + video.placeholder}
            alt={video.link}
        />
        <span>{video.text}</span>
    </article>
    <h4>{video.title}</h4>
</li>
<style>
    .video-list{
        display: flex;
        flex-direction: column;
        justify-content: start;
        text-align: center;
        width: 200px;
    }
    .video-list article{
        position: relative;
        overflow: hidden;
        width: 200px;
        height: 200px;
        border-radius: 500px;
        margin-bottom: 20px;
        cursor: pointer;
    }
    .video-list article img{
        width: 100%;
        height: 100%;
    }
    .video-list article span{
       position: absolute;
       width: calc(100% - 20px);
       height: calc(100% - 15px);
       background-color: var(--accent);
       top: 100%;
       left: 0;
       display: flex;
       flex-direction: column;
       justify-content: center;
       align-content: center;
       padding: 10px;
       opacity: 0;
       transition: top .3s, opacity .5s;
       touch-action: none;
       user-select: none;
    }
    .video-list article:hover span{
        opacity: .9;
        top: 0;
    }
    .video-list h4{
        font-size: 1.5rem;
        text-transform: uppercase;
    }
    .selected{
        border: 1px solid var(--light);
    }
</style>
