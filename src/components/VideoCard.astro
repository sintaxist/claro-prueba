---
interface Props {
    video: any;
}

const { video } = Astro.props;
---

<li class="video-list">
    <article>
        <img src={"imgs/placeholder/" + video.placeholder} alt={video.link} />
        <span>{video.text}</span>
    </article>
    <h4>{video.title}</h4>
</li>
<style>
    .video-list {
        display: flex;
        flex-direction: column;
        justify-content: start;
        align-items: center;
        text-align: center;
        width: 180px;
    }
    .video-list article {
        position: relative;
        overflow: hidden;
        width: 25%;
        max-width: 180px;
        min-width: 180px;
        border-radius: 500px;
        margin-bottom: 20px;
        cursor: pointer;
    }
    .video-list article img {
        width: 100%;
        height: 100%;
    }
    .video-list article span {
        position: absolute;
        width: calc(100% - 20px);
        height: calc(100% - 15px);
        background-color: var(--accent);
        top: 100%;
        left: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-content: center;
        padding: 10px;
        opacity: 0;
        transition:
            top 0.3s,
            opacity 0.5s;
        touch-action: none;
        user-select: none;
    }
    .video-list article:hover span {
        opacity: 0.9;
        top: 0;
    }
    .video-list h4 {
        font-size: 1.5rem;
        text-transform: uppercase;
    }
    .selected {
        border: 1px solid var(--light);
    }

    @media (max-width: 900px) {
        .video-list {
            width: calc(50% - 20px);
        }
        .video-list article {
            width: 50%;
            max-width: 180px;
            min-width: 180px;
            margin-bottom: 10px;
        }
        .video-list h4{
            font-size: 1.2rem;
        }
    }
    @media (max-width: 550px) {
        .video-list {
            width: calc(50% - 20px);
        }
        .video-list article {
            width: 50%;
            max-width: 110px;
            min-width: 110px;
        }
        .video-list h4{
            font-size: 1rem;
        }
        .video-list article span {
            font-size: .7rem;
        }
    }
</style>
